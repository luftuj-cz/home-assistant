{
  "id": "modbus-korado",
  "capabilities": {
    "hasPowerControl": true,
    "hasTemperatureControl": false,
    "hasModeControl": false
  },
  "powerCommands": {
    "read": [
      {
        "type": "assignment",
        "variable": "$power",
        "value": {
          "function": "modbus_read_holding",
          "args": [106, 1]
        }
      }
    ],
    "write": [
      {
        "type": "action",
        "expression": {
          "function": "modbus_write_holding",
          "args": [106, "$power"]
        }
      }
    ]
  },
  "keepAlive": {
    "period": 5000,
    "commands": [
      {
        "type": "action",
        "expression": { "function": "modbus_write_coil", "args": [31, 1] }
      }
    ]
  }
}
